@page
@using ZealandZooLIB.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BulletPageModel
@{
}
@*Sarah har skrevet dette kode*@

@if (User.IsInRole("admin"))
{
  <head>
        
      
        <link rel="stylesheet" href="~/css/BulletStyle.css"/>
        <link rel="stylesheet" href="~/css/site.css">
       
        
      
  </head>




   <div class="section-bullet">
   
    <main  class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
       <h2 class="text-lg-center">Bullets</h2>
       <div class="table">
        <table class="table bullet-table table-lm">
           <thead>
               <tr>
                   <th scope="col">Title</th>
                   <th scope="col">Content</th>
               </tr>
           </thead>
                    <tbody>
                    @foreach (Bullet b in Model.Bullets)
                    {
                        <tr scope="row">
                         <td class="title">
                           @b.Title
                         </td>
                         <td class="compressed-col">
                           @b.Content_Bullet
                         </td>
                            <td class="dims">
                                <form method="get">
                                    <input type="hidden" name="id" value="@b.Id"/>
                                    <button asp-page="/BulletCRUD/UpdateBullet" class="btn-1">Opdater</button>
                                </form>
                            </td>
                                    <td class="dims2">
                                    <form method="get">
                                            <input type="hidden" name="id" value="@b.Id"/>
                                         <button asp-page="/BulletCRUD/DeleteBullet" class="btn-1">Slet</button>
                                            </form>
                                     </td>
                        </tr>
                    }
                   </tbody>
        </table>
      
        
       </div>
    </main>


   </div>
        <div class="dims3">
            <form method="post">
                        <button asp-page="/BulletCRUD/CreateBullet" class="btn-1">Opret en ny Bullet</button>
            </form>
        </div>
}

