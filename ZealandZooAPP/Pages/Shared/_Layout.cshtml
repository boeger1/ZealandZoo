<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ZealandZooAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ZealandZooAPP.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light-pink">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img width="190" height="50" viewBox="150 50" src="https://svgshare.com/i/tMK.svg"
                     a href="https://svgshare.com/s/tMK" title="logo"/>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Calender" aria-label="Kalender">
                            <img src="https://svgshare.com/i/teN.svg" href="https://svgshare.com/s/teN" style="height: 40px; width: 109px;"/>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Gallery/Gallery">
                            <img src="https://svgshare.com/i/tei.svg" href="https://svgshare.com/s/tei" style="height: 40px; width: 88px;"/>
                        </a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/About">
                            <img src="https://svgshare.com/i/teB.svg" href="https://svgshare.com/s/teB" style="height: 40px; width: 69px;"/>
                        </a>
                    </li>


                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/StoragePage">
                                    <img src="https://svgshare.com/i/td2.svg" href="https://svgshare.com/s/td2" style="width: 107px; height: 40px;" />
                                    
                            </a>
                        </li>
                    }





                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ZooStudentCrud/CreateZooStudent">

                                <img src="https://svgshare.com/i/tej.svg" href="https://svgshare.com/s/tej" style="height: 40px; width: 100px;" viewBox="0 0 88 40"/>


                            </a>
                        </li>
                    }


                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard">
                                <img src="https://svgshare.com/i/tdh.svg" href="https://svgshare.com/s/tdh" style="height: 40px; width: 129px;"/>
                            </a>
                        </li>
                    }

                </ul>
            </div>
            <div class="mr-2">
                <partial name="_LoginStatusPartial"/>
            </div>

        </div>

    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted fixed-bottom">
    <div class="container">
        &copy; 2023 - ZealandZooAPP
    </div>
</footer>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>


</html>