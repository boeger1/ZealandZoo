<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ZealandZooAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ZealandZooAPP.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light-pink border-bottom box-shadow mb-3">
            <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img width="30" height="30" viewBox="0 0 30 30" src="~/assets/flamingo-standing.png"
                     a href="https://www.flaticon.com/free-icons/flamingo" title="flamingo iconsFlamingo icons created by max.icons - Flaticon"/>
                Zealand Zoo
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Calender">
                            <img src="~/assets/calendar3.png" width="30" height="30" viewBox="0 0 30 30"/>
                            Kalender
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Gallery/Gallery">
                            <img src="~/assets/photo-camera.png" width="30" height="30" viewBox="0 0 30 30"/>
                            Billeder
                        </a>
                    </li>

                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/StoragePage">
                                <img src="~/assets/calendar-2.png" width="30" height="30" viewBox="0 0 30 30"/>
                                Inventar
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/BulletPage">
                                <img src="~/assets/project-management.png" width="30" height="30" viewBox="0 0 30 30"/>
                                Bulletin Board
                            </a>
                        </li>
                    }

                </ul>
            </div>
            <div class="mr-2">
                <partial name="_LoginStatusPartial"/>
            </div>
                

        </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted fixed-bottom">
    <div class="container">
        &copy; 2023 - ZealandZooAPP
    </div>
</footer>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>


</html>