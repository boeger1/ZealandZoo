<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ZealandZooAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ZealandZooAPP.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light-pink">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img width="190" height="50" viewBox="150 50" src="https://svgshare.com/i/tMK.svg"
                         a href="https://svgshare.com/s/tMK" title="logo" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Calender" aria-label="Kalender">
                                <img src="https://svgshare.com/i/tcj.svg" href="https://svgshare.com/s/tcj" width="88" height="40" viewBox="0 0 90 45" />
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Gallery/Gallery">
                                <img src="https://svgshare.com/i/tbt.svg" href="https://svgshare.com/s/tbt" width="88" height="40" viewBox="0 0 90 45" />
                            </a>
                    </li>
                        


                        

                  
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/StoragePage">
                                    @*<svg xmlns="http://www.w3.org/2000/svg" width="88" height="40" viewBox="88 40" class="align-middle" style="vertical-align: middle;">*@
                                    <img src="https://svgshare.com/i/tdF.svg" href="https://svgshare.com/s/tdF" width="88" height="40" viewBox="0 0 90 45" />
                                    @*</svg>*@
                            </a>
                        </li>
                    }

                        

                        

                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/ZooStudentCrud/CreateZooStudent">

                                    <img src="https://svgshare.com/i/tcw.svg" href="https://svgshare.com/s/tcw" width="88" height="40" viewBox="0 0 90 45" />
                                   
                                    
                                </a>
                            </li>
                        }


                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard">
                                    <img src="https://svgshare.com/i/tb_.svg" href="https://svgshare.com/s/tb_" width="88" height="40" viewBox="0 0 90 45" />
                                </a>
                            </li>
                        }

                </ul>
            </div>
            <div class="mr-2">
                <partial name="_LoginStatusPartial"/>
            </div>
           
        </div>

        </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted fixed-bottom">
    <div class="container">
        &copy; 2023 - ZealandZooAPP
    </div>
</footer>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>


</html>