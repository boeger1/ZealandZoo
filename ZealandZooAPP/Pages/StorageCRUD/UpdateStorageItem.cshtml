@page
@model UpdateStorageItemModel
@{
}

<h1>Opdater Vare</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">

            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label">Navn</label><br/>
                <input asp-for="@Model.Name" class="form-control"/> <br/>
            </div>

            <div class="form-group">
                <label asp-for="Item_Type" class="control-label">Type</label><br/>
                <select asp-for="Item_Type" class="form-control">
                    @foreach (var it in Model.Item_Types)
                    {
                        <option value="@it">@it</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Price" class="control-label">Pris</label>
                <input asp-for="@Model.Price" class="form-control"> <br/>
            </div>


            <form method="post">
                <input type="hidden" asp-for="@Model.UpdateItem.Id" class="form-control"/><br>
                <div class="form-group">
                    <input type="submit" value="Opdater" asp-page-handler="Update" asp-route-id="@Model.UpdateItem.Id" class="btn btn-succes"/>

                    <input type="submit" value="Cancel" asp-page-handler="Cancel" class="btn btn-primary"/>
                </div>
            </form>

        </form>
    </div>
</div>