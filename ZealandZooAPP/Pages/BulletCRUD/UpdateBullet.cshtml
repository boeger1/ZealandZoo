@page
@model ZealandZooAPP.Pages.BulletCRUD.UpdateBulletModel
@{
}
<h1>Opdater Artikkel</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Id" class="form-control" /><br />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label">Title</label><br />
                <input asp-for="@Model.Title" class="form-control" /><br />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ContentBullet" class="control-label">Content</label><br />
                <input asp-for="@Model.ContentBullet" class="control-label" /><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" />
            </div>
            <form method="post">
                <div class="form-group">
                    <input type="submit" value="Opdater" asp-page-handler="Update" asp-route-id="@Model.Bullet.Id" class="btn btn-success" />
                    <input type="submit" value="Canvel" asp-page-handler="Cancel" class="btn btn-primary" />
                </div>
            </form>
        </form>
    </div>
</div>