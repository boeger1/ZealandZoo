@page
@model CreateEventModel
@{
}

@if (User.IsInRole("admin"))
{
    <h1 class="h1 text-center m-4 text-decoration-underline">Opret Event</h1>

@*    <div class="row">*@
    <section class="create-event h-100 d-flex align-items-center justify-content-center">

        <div class="col-md-6">

            <form class="form-control" method="post" enctype="multipart/form-data" style="background: rgba(200,80,30,.8); opacity: 1">
                <div class="mb-4">
                    <label class="form-label">Tilføj et baggrundsbillde til eventet</label>
                    <input type="file" name="file" class="form-control"/>
                </div>
                <hr/>

                <div class="form-group">
                    <label asp-for="@Model.Event.Name" class="form-label">Titel</label><br>
                    <input asp-for="@Model.Event.Name" class="form-control" placeholder="Tilføj en titel til eventet..." /><br>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.Event.Description" class="form-label">Beskrivelse</label><br>
                <textarea asp-for="@Model.Event.Description" class="form-control" placeholder="Tilføje en beskrivelse til eventet..."></textarea><br>
                </div>
                <hr />
                <div class="d-flex flex-row justify-content-start">
                    <div class="form-group">
                        <label asp-for="@Model.Event.DateFrom" class="form-label">Start dato</label><br>
                        <input type="date" asp-for="@Model.Event.DateFrom" class="form-control" /><br>
                    </div>
                    <div class="w-25"></div>
                    <div class="form-group">
                        <label asp-for="@Model.StartTime" class=" form-label">Start tidspunkt</label><br>
                        <input type="time" asp-for="@Model.StartTime" class="form-control" value="12:00"/><br>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-start">
                    <div class="form-group">
                        <label asp-for="@Model.Event.DateTo" class="form-label">Slut dato</label><br>
                        <input type="date" asp-for="@Model.Event.DateTo" class="form-control"/><br>
                    </div>
                    <div class="w-25"></div>
                    <div class="form-group">
                        <label asp-for="@Model.EndTime" class=" form-label">Slut tidspunkt</label><br>
                        <input type="time" asp-for="@Model.EndTime" class="form-control" value="22:00"/><br>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.Event.MaxGuest" class="form-label">Maksimum deltagere</label><br>
                    <input asp-for="@Model.Event.MaxGuest" class="form-control" value="400"/><br>
                </div>
                <div class="form-group">
                    <div class="d-flex align-items-center justify-content-start align-baseline">
                        <label for="is-free-checkbox" class="form-label m-0">Gratis&nbsp;entré&nbsp;&nbsp;</label>
                        <input class="form-check" id="is-free-checkbox" onchange="checkClickFunc()" type="checkbox" style="width: 10%"/>
                        <div class="w-25"></div>
                        <label class="form-label m-0 width-10" asp-for="@Model.Event.Price">Pris&nbsp;&nbsp;</label>
                        <input id="price-input" type="number" asp-for="@Model.Event.Price" class="form-control w-50"/>
                        <div class="w-50"></div>

                    </div>
                </div>
                <hr />
                <div class="text-center">
                    <input type="submit" asp-page-handler="event" value="Opret" class="btn btn-primary"/>
                    <button class="btn btn-danger m-3" asp-page="/Calender">Afbryd</button>
                </div>
            </form>

        </div>
    </section>



@*    <div>
        <a asp-page="/Calender"> Tibage til calender</a>
    </div>*@
}