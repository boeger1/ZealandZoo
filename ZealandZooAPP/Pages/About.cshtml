@page
@using ZealandZooLIB.Models;
@using ZealandZooLIB.Services;
@model ZealandZooAPP.Pages.AboutModel



@{
    
}

<head>

    <link href="~/css/site.css" rel="stylesheet" />



    <style>
        
        .about-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        
        .employee-gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-bottom: 30px;
        }

        .employee-card {
            text-align: center;
            margin: 20px;
            background-size: cover;
        }

            .employee-card img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                background-repeat: repeat;
                background-size: cover;
            }

        
        .bottom-section {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .our-vision {
            flex: 1;
            padding: 0 20px;
        }

        .visionBox{
            width: 540px;
            height: 620px;
        }

        
        .contact-info {
            flex: 1;
            padding: 0 20px;
        }

        
        .social-media-links a {
            display: inline-block;
            margin-right: 10px;
        }
    </style>




</head>

<div class="about-container">
    <img src="https://svgshare.com/i/tdY.svg" title='omOs' style="width: 366px; height: 40px; margin-top: 23px;
            margin-bottom: 11px;" /></>

    <section>
        <h2>Mød Zoo</h2>
        <div class="employee-gallery">
            @if (Model.ZooStudents.Count > 0)
            {
                foreach (Student s in Model.ZooStudents)
                {
                    <div class="employee-card">

                        <img src="images/@Model.GetEventZooStudentImageNameById(s.ImageId)" alt="Employee Image" />
                        
                        <h3>@s.FirstName</h3>
                        <h3>@s.LastName</h3>
                    </div>

                }
            }
        </div>
    </section>

    <section class="bottom-section">
        <div class="our-vision">
            <h2>Vores vision</h2>
