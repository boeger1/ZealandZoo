@page
@using ZealandZooLIB.Models;
@using ZealandZooLIB.Services;
@model ZealandZooAPP.Pages.AboutModel



@{
    
}

<head>

    <link href="~/css/site.css" rel="stylesheet" />



    <style>
        /* Main layout */
        .about-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Top section - Card gallery */
        .employee-gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-bottom: 30px;
        }

        .employee-card {
            text-align: center;
            margin: 20px;
        }

            .employee-card img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
            }

        /* Bottom section - Divided horizontally */
        .bottom-section {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        /* Left side - Our Vision */
        .our-vision {
            flex: 1;
            padding: 0 20px;
        }

        /* Right side - Contact Information */
        .contact-info {
            flex: 1;
            padding: 0 20px;
        }

        /* Social media links */
        .social-media-links a {
            display: inline-block;
            margin-right: 10px;
        }
    </style>




</head>

<div class="about-container">
    <h1>About Us</h1>

    <section>
        <h2>Meet Us</h2>
        <div class="employee-gallery">
            @if (Model.ZooStudents.Count > 0)
            {
                foreach (Student s in Model.ZooStudents)
                {
                    <div class="employee-card" @*style="background-image: url('images/@Model.GetEventImageNameById(z.ImageId)')*@>

                        <h3>@s.FirstName</h3>
                        <h3>@s.LastName</h3>
                    </div>

                }
            }
        </div>
    </section>

    <section class="bottom-section">
        <div class="our-vision">
            <h2>Our Vision</h2>
            <div class="vision-content">
                <h3>Vores Vision</h3>
                <p>fsdkjfbræghrjghkrghrkgjrhngkaergjrg. gjbrjhgbrjehgbjergbjergber.agjrngkjrbkaergbrejk.</p>
            </div>
           
        </div>

        <div class="contact-info">
            <h2>Contact Us</h2>
            <form method="post">
                <div>
                    <label>Your Name:</label>
                    <input asp-for="@Model.Formular.SenderName" type="text" id="name" required />
                </div>
                <div>
                    <label>Your Email:</label>
                    <input asp-for="@Model.Formular.SenderEmail" type="email" id="email" required />
                </div>
                <div>
                    <label>Message:</label>
                    <textarea asp-for="@Model.Formular.MailBody" id="message" required></textarea>
                </div>
                <button asp-page-handler="SubmitFormular" type="submit">Send Email</button>
            </form>

            <div class="social-media-links">
                <a href="https://facebook.com/yourpage">Facebook</a>
                <a href="https://twitter.com/yourpage">Twitter</a>
                <a href="https://instagram.com/yourpage">Instagram</a>
            </div>
        </div>
    </section>
</div>
