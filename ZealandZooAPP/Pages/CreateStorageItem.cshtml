@page
@model ZealandZooAPP.Pages.CreateStorageItemModel
@{
}


<h1>Opret ny vare</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.StorageItem.Name" class="control-label">Navn</label><br />
                <input asp-for="@Model.StorageItem.Name" class="form-control" /> <br />
            </div>

            <div class="form-group">
                <label asp-for="EnumType" class="control-label">Type</label><br />
                <select asp-for="EnumType" class="form-control">
                    @foreach (var it in Model.ItemTypes)
                    {
                        <option value="@it">@it</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="@Model.StorageItem.Price" class="control-label">Pris</label>
                <input asp-for="@Model.StorageItem.Price" class="form-control"> <br />
            </div>

            <div class="form-group">
                <input type="submit" value="Opret" />
            </div>

        </form>
    </div>
</div>