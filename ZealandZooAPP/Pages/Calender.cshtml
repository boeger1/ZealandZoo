@page
@using ZealandZooLIB.Models
@using ZealandZooLIB.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CalenderModel
@{
}

<section class="calendar">
    <div class="calendar-date-view mt-5">
        <form method="post">
            <div class="container">
                <div class="d-flex justify-content-evenly">
                    <button type="submit" class="calendarButton me-4 w-130p" asp-page-handler="previousMonth">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                        </svg>
                        @Model.CalendarService.GetPreviousMonth()
                    </button>
                    <h1 class="w-50 text-center">@Model.CalendarService.GetCurrentMonth() - @Model.CalendarService.GetCurrentYear()</h1>
                    <button type="submit" class="calendarButton ms-4 w-130p" asp-page-handler="nextMonth">
                        @Model.CalendarService.GetNextMonth()
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                        </svg>
                    </button>
                </div>
            </div>
        </form>
        <hr/>

        @if (User.IsInRole("admin"))
        {
            <form method="post">
                <div style="text-align: center">
                    <button class=" create-eventButton" asp-page-handler="CreateEvent">
                        Opret event
                    </button>
                </div>
            </form>
            <hr/>
        }

        <div class=" d-flex flex-wrap p-2">
            @for (var i = 0; i < Model.CalendarService.GetDayNames().Length; i++)
            {
                <div class="text-center px-4 pt-2 dayNameTitle">
                    <p class="">@Model.CalendarService.GetDayNames()[i]</p>
                </div>
            }
        </div>
        <div class="d-flex justify-content-center flex-wrap p-2">
            @for (var i = 0; i < (int)Model.CalendarService.FirstDayInMonth(); i++)
            {
                // Empty days
                <div class="text-center px-4 pt-2 calendar-day-box"></div>
            }
            @foreach (var day in Model.CalendarService.GetDaysInCurrentMonth(Model.Events))
            {
                @if (day.Date.Day % 2 == 0)
                {
                    // Even days
                    @if (day.ZooEvent != null)
                    {
                        if (day.ZooEvent.ImageId > 0)
                        {
                            <div class="text-center fontNr px-4 pt-2  calendarbox calendar-day-box bg-light-grey" 
                                 style="background-image: url('images/@Model.GetEventImageNameById(day.ZooEvent.ImageId)');">
                                <h3>@day.Date.Day</h3>
                                <a class="event-link" asp-page="/EventCRUD/EventPage" asp-route-id="@day.ZooEvent.Id">@day.ZooEvent.Name</a>
                            </div>
                        }
                        else
                        {
                            <div class="text-center fontNr px-4 pt-2  calendarbox calendar-day-box bg-light-grey">
                                <h3>@day.Date.Day</h3>
                                <a class="event-link" asp-page="/EventCRUD/EventPage" asp-route-id="@day.ZooEvent.Id">@day.ZooEvent.Name</a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center px-4 pt-2 fontNr calendarbox bg-light-grey">
                            <h3>@day.Date.Day</h3>
                        </div>
                    }
                }
                // Uneven days
                else                   
                {
                    @if (day.ZooEvent != null)
                    {
                        if (day.ZooEvent.ImageId > 0)
                        {
                            <div class="text-center px-4 pt-2 fontNr calendarbox calendar-day-box bg-light-grey" style="background-image: url('images/@Model.GetEventImageNameById(day.ZooEvent.ImageId)');">
                                <h3>@day.Date.Day</h3>

                                <a class="event-link" asp-page="/EventCRUD/Eventpage" asp-route-id="@day.ZooEvent.Id">@day.ZooEvent.Name</a>

                            </div>
                        }
                        else
                        {
                            <div class="text-center px-4 pt-2 fontNr calendarbox calendar-day-box bg-medium-grey">
                                <h3>@day.Date.Day</h3>

                                <a class="event-link" asp-page="/EventCRUD/EventPage" asp-route-id="@day.ZooEvent.Id">@day.ZooEvent.Name</a>

                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center fontNr px-4 pt-2  calendarbox bg-medium-grey">
                            <h3>@day.Date.Day</h3>
                        </div>
                    }
                }
            }
        </div>
    </div>
    <hr />
    <div class="calendar-list-view">
        <div class="list-group list-group-flush overflow-auto h-100">
            @foreach (Event zooEvent in Model.EventService.GetAll())
            {
                @if (Model.CalendarService.IsNewMonth(CalendarService.GetMonth(zooEvent.DateTo.Month)))
                {
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@CalendarService.GetMonth(zooEvent.DateTo.Month)</h5>
                        </div>
                    </a>
                }
                <a asp-page="/EventCRUD/EventPage" asp-route-id="@zooEvent.Id" class="list-group-item list-group-item-action flex-column align-items-start event-link bg-event">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@zooEvent.Name</h5>
                        <small>@zooEvent.DateTo.</small>
                    </div>
                    <p class="mb-1">@zooEvent.Description</p>
                    <small>Pris: @zooEvent.Price ,-</small>
                </a>
            }
        </div>
    </div>
</section>