@page
@model CreateImageModel
@{
}

@if (User.IsInRole("admin"))
{
    <div class="container mt-5">
        <form class="mx-auto create-image-form" method="post" enctype="multipart/form-data">
            <div>
                <label class="form-label">Upload til galleriet</label>
                <input type="file" name="file" class="form-control"/>
            </div>
            <div>
                <button style="float: right;" class="mt-4 btn btn-primary" type="submit">Upload</button>
            </div>
        </form>
    </div>
}